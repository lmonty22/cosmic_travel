<h1>New Scientist Form</h1>
<ul>
<% if @scientist.errors.full_messages.each do |message| %>
     <li><%= message %></li>
        <%end %>
    <%end %>
</ul>

<%= form_for @scientist do |s| %>
<%= s.label :name %>
<%= s.text_field :name %>
<%= s.label :field_of_study %>
<%= s.text_field :field_of_study%>
<br>
<%= s.submit %>
<%end%>